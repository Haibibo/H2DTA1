<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgrtrangchu"
    tools:context="com.example.xuka.h2dta1.TrangChu1"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageH"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin chào thánh ăn"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chúng tôi có thể phục vụ gì cho bạn hôm nay ?"
            android:textSize="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edtsearch"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Tìm kiếm đồ ăn, tên, địa điểm" />

        <Button
            android:id="@+id/btnsearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Search" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="42dp"
                android:id="@+id/imgbt1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/nhahang" />
            <TextView
                android:textColor="#FFFFFF"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="NHÀ HÀNG"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="42dp"
                android:id="@+id/imge2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/caphe" />
            <TextView
                android:textColor="#FFFFFF"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="COFFEE"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="20dp"
                android:id="@+id/imge3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/anvat" />
            <TextView
                android:textColor="#FFFFFF"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ĂN VẶT"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginRight="50dp"
                android:layout_marginLeft="70dp"
                android:id="@+id/imge4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/bar" />
            <TextView
                android:textColor="#FFFFFF"
                android:layout_marginLeft="110dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="BAR"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imge5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/nhau" />
            <TextView
                android:textColor="#FFFFFF"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="QUÁN NHẬU"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageN"
        android:layout_width="1100px"
        android:layout_height="1000px"
        android:src="@drawable/footertrangchu" />


</LinearLayout>
